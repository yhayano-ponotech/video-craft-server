# サーバーポート
PORT=4000

# CORSの設定（フロントエンドのURL）
CORS_ORIGIN=http://localhost:3000

# アップロードファイルの最大サイズ (bytes) - 500MB
MAX_FILE_SIZE=524288000

# ファイル保持期間 (時間) - 24時間
FILE_RETENTION_HOURS=24

# YouTube Data API キー (Google Cloud Consoleから取得)
YOUTUBE_API_KEY=your_youtube_api_key_here

# 安全でない動画ダウンロード方法を使用する (開発環境のみ)
# true に設定すると、APIではなく直接ダウンロードを試みます。
# 本番環境では false にしてください。
UNSAFE_DOWNLOAD=false

# ダウンロードベースURL（本番環境用。開発時は自動で設定）
# DOWNLOAD_BASE_URL=https://api.example.com